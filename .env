# .env

pathadd() {
  while [[ $PATH =~ :$1: ]]
  do
    PATH=${PATH//:$1:/:}
  done
  PATH=${PATH#$1:}
  PATH=${PATH%:$1}
  PATH=${PATH}:${1}
}

# From https://stackoverflow.com/questions/57983007/prepending-to-the-path
pathprepend() {
  while [[ $PATH =~ :$1: ]]
  do
    PATH=${PATH//:$1:/:}
  done
  PATH=${PATH#$1:}
  PATH=${PATH%:$1}
  PATH=${1}:${PATH}
}
